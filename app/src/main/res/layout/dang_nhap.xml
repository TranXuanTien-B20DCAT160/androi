<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3ECEC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.978">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="LOG IN"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/img_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt1" />

        <EditText
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="Nhập tên tài khoản"
            android:background="@drawable/edittext_shape"
            app:layout_constraintTop_toBottomOf="@id/img1" />

        <EditText
            android:id="@+id/edt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="Nhập tên tài khoản"
            android:background="@drawable/edittext_shape"
            app:layout_constraintTop_toBottomOf="@id/edt1" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Quên mật khẩu"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="@id/edt2"
            app:layout_constraintTop_toBottomOf="@id/edt2" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_2"
            android:text="Đăng nhập"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Lựa chọn khác"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt1" />

        <ImageView

            android:id="@+id/img2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_5"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt3" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_6"
            app:layout_constraintLeft_toRightOf="@id/img2"
            app:layout_constraintTop_toTopOf="@id/img2"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            tools:layout_editor_absoluteX="83dp" />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_7"
            app:layout_constraintLeft_toRightOf="@id/img3"
            app:layout_constraintTop_toTopOf="@id/img3"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            tools:layout_editor_absoluteX="83dp" />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Tạo tài khoản"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img2" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>